<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    style="@style/loginCard"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/loginCardRadius"
    android:layout_gravity="center"
    android:elevation="5dp"
    android:id="@+id/cardView"
    android:layout_marginTop="@dimen/loginViewsMargin"
    android:layout_marginBottom="@dimen/loginViewsMargin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:stretchColumns="0,1">

        <TableRow android:weightSum="10">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="5"
                android:paddingLeft="10dp"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:orientation="vertical">
                <TextView
                    android:text = "Name"
                    android:textStyle="bold"
                    style="@style/tableText"/>

                <TextView
                    android:text = "Name"
                    android:id="@+id/nameTv"
                    style="@style/tableText"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="5"
                android:paddingLeft="10dp"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:orientation="vertical">
                <TextView
                    android:text = "House No"
                    android:textStyle="bold"
                    style="@style/tableText"/>

                <TextView
                    android:text = "Name"
                    android:id="@+id/houseNoTv"
                    style="@style/tableText"/>

            </LinearLayout>

        </TableRow>

        <TableRow android:weightSum="10">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="5"
                android:paddingLeft="10dp"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:orientation="vertical">
                <TextView
                    android:text = "Ward"
                    android:textStyle="bold"
                    style="@style/tableText"/>

                <TextView
                    android:text = "Name"
                    android:id="@+id/wardTv"
                    style="@style/tableText"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="5"
                android:paddingLeft="10dp"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:orientation="vertical">
                <TextView
                    android:text = "Mohalla"
                    android:textStyle="bold"
                    style="@style/tableText"/>

                <TextView
                    android:text = "Name"
                    android:id="@+id/mohallaTv"
                    style="@style/tableText"/>

            </LinearLayout>

        </TableRow>

        <TableRow android:weightSum="10">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="5"
                android:paddingLeft="10dp"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:orientation="vertical">
                <TextView
                    android:text = "Contact No."
                    android:textStyle="bold"
                    style="@style/tableText"/>

                <TextView
                    android:text = "Name"
                    android:id="@+id/contactNoTv"
                    style="@style/tableText"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="5"
                android:paddingLeft="10dp"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:orientation="vertical">
                <TextView
                    android:text = "Torrent Id"
                    android:textStyle="bold"
                    style="@style/tableText"/>

                <TextView
                    android:text = "Name"
                    android:id="@+id/torrentTv"
                    style="@style/tableText"/>

            </LinearLayout>

        </TableRow>

        <TableRow android:weightSum="10">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="5"
                android:paddingLeft="10dp"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:orientation="vertical">
                <TextView
                    android:text = "Unique Id"
                    android:textStyle="bold"
                    style="@style/tableText"/>

                <TextView
                    android:text = "Name"
                    android:id="@+id/uniqueIdTv"
                    style="@style/tableText"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="5"
                android:paddingLeft="10dp"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:orientation="vertical">
                <TextView
                    android:text = "QR Code"
                    android:textStyle="bold"
                    style="@style/tableText"/>

                <TextView
                    android:text = "Name"
                    android:id="@+id/qrCodeTv"
                    style="@style/tableText"/>

            </LinearLayout>

        </TableRow>

        <TableRow android:weightSum="10">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="5"
                android:paddingLeft="10dp"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:orientation="vertical">
                <TextView
                    android:text = "Monthly Charges"
                    android:textStyle="bold"
                    style="@style/tableText"/>

                <TextView
                    android:text = "Name"
                    android:id="@+id/monthlyChargeTv"
                    style="@style/tableText"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="5"
                android:paddingLeft="10dp"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:orientation="vertical">
                <TextView
                    android:text = "Due From"
                    android:textStyle="bold"
                    style="@style/tableText"/>

                <TextView
                    android:text = "Name"
                    android:id="@+id/monthYearTv"
                    style="@style/tableText"/>

            </LinearLayout>

        </TableRow>

    </TableLayout>

    <Button
        android:id="@+id/collectButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="60dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:elevation="3dp"
        android:background="@drawable/round_corner"
        android:text="Pay Now"
        android:textColor="@android:color/white" />
    </LinearLayout>
</android.support.v7.widget.CardView>